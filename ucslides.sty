% call packages

\usepackage[paperheight=5in, paperwidth=8in, margin=.5in, top=.3in]{geometry}
% screen ratio 16:9 => paperheight=4.5in, paperwidth=8in
% screen ratio 4:3 => paperheight=6in, paperwidth=8in

\usepackage{graphicx}
\usepackage[fontsize=15pt]{scrextend}
\usepackage[svgnames]{xcolor}
\definecolor{DarkBlue}{RGB}{0,0,128}

\usepackage{sectsty}
\allsectionsfont{\centering}

\usepackage{url}
\usepackage{hyperref}
\hypersetup{
  colorlinks,
  citecolor=DarkBlue,
  linkcolor=DarkBlue,
  urlcolor=DarkBlue}

%--------------------------------%
% call fancyhdr and set header/footer

\usepackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}

\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{1pt}
\lfoot{\shortauthor}
\cfoot{\shorttitle}
\rfoot{\thepage}

\fancypagestyle{plain}
% rededine the default "plain" pagestyle => applied to title slide
{
    \fancyhf{}
    \renewcommand{\headrulewidth}{0pt}
    \renewcommand{\footrulewidth}{0pt}
}


